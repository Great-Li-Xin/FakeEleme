<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="5dp"
            android:src="@mipmap/pic1"
            android:id="@+id/picture"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/shopname"
            android:textSize="20dp"
            android:text="老盛昌汤包"
            android:textColor="#333333"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/picture"/>
        <ImageView
            android:id="@+id/shopstar"
            android:src="@mipmap/star8"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/picture"
            android:layout_below="@id/shopname"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/shopevaluate"
            android:text="4.5dp"
            android:textSize="14dp"
            android:textColor="#333333"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/shopstar"
            android:layout_below="@id/shopname"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:gravity="center"
            android:text="月售"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/shopname"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/shopevaluate"/>
        <TextView
            android:id="@+id/sellnum"
            android:text="1120"
            android:layout_width="40dp"
            android:textColor="#333333"
            android:layout_height="20dp"
            android:layout_below="@id/shopname"
            android:layout_toRightOf="@id/shopevaluate"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:gravity="center_vertical"
            android:text="起送 ¥"
            android:textColor="#333333"
            android:layout_below="@id/shopstar"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/picture"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="20dp" />
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/send"
            android:text="20"
            android:textColor="#333333"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/shopstar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@id/picture"/>
        <TextView
            android:background="#888888"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_below="@id/shopstar"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/send"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_below="@id/shopstar"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/send"
            android:layout_marginLeft="15dp"
            android:text=" 配送 ¥"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/freight"
            android:layout_below="@id/shopstar"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/send"
            android:layout_marginLeft="60dp"
            android:text="5"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/send"
            android:background="#bbccdd"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>